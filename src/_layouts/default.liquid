{% include "_layouts/header.liquid" %}
<h2>{{ title }}</h2>
<div class="chip"><nobr><i class="material-icons">date_range</i> {{ date | date:"%a&nbsp;%d&nbsp;%b&nbsp;'%y" }}</nobr></div>
{% if tags %}<div class="chip"><nobr><i class="material-icons">label</i> {{ tags }}</nobr></div>{% endif %}
{% if lang %}<div class="chip"><nobr><i class="material-icons">language</i> {{ lang }}</nobr></div>{% endif %}
<div class="chip"><a href="https://github.com/kstep/kstep.github.com/tree/master/src/{{ path | replace:".html",".md" }}"><i class="material-icons">code</i> code</a></div>
{% if source %}<div class="chip"><a href="{{ source }}"><i class="material-icons">link</i> source</a></div>{% endif %}
{{ content }}

<script src="/static/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>
{% include "_layouts/footer.liquid" %}
