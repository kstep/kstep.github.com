{% include "_layouts/header.liquid" %}
<a class="btn-floating btn-large waves-effect waves-light purple lighten-3 right" href="https://github.com/kstep/kstep.github.com/new/master/_src/posts/" style="top: -30px; position: relative;"><i class="material-icons">add</i></a>

<h2>All posts</h2>
<div class="row">
    {% for post in posts %}
        <div class="col s12 m6 l4">
            <div class="post card hoverable"><a class="post-path" href="{{ post.path }}">
                <div class="card-content">
                    <span class="post-title card-title">{{ post.title }}</span>
                    {% if post.lang %}<label class="post-lang emoji" title="{{ post.lang }}">{% if post.lang == "en" %}ðŸ‡ºðŸ‡¸{% else %}{% if post.lang == "ru" %}ðŸ‡·ðŸ‡º{% else %}{{ post.lang }}{% endif %}{% endif %}</label>{% endif %}
                    <label class="post-date">{{ post.date | date:"%a&nbsp;%d&nbsp;%b&nbsp;'%y" }}</label>
                    {% if post.excerpt %}<p class="post-excerpt black-text">{{ post.excerpt }}</p>{% else %}<br />{% endif %}
                    {% if post.tags %}<label class="post-tags">{{ post.tags }}</label>{% endif %}
                </div>
            </a></div>
        </div>
    {% endfor %}
</div>
<script src="/static/masonry.pkgd.min.js"></script>
