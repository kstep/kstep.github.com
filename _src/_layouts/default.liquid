{% include "_layouts/header.liquid" %}
<noindex><a class="btn-floating btn-large waves-effect waves-light purple lighten-3 right" href="https://github.com/kstep/kstep.github.com/edit/master/_src/{{ path | replace:".html",".md" }}" style="top: -30px; position: relative;"><i class="material-icons">edit</i></a></noindex>

<h2>{{ title }}</h2>
<div class="chip"><nobr><i class="material-icons">event</i> {{ date | date:"%a&nbsp;%d&nbsp;%b&nbsp;'%y" }}</nobr></div>
{% if tags %}<div class="chip"><nobr><i class="material-icons">label</i> {{ tags }}</nobr></div>{% endif %}
{% if lang %}<div class="chip"><nobr><i class="material-icons">language</i> {{ lang }}</nobr></div>{% endif %}
{% if source %}<div class="chip"><a href="{{ source }}"><i class="material-icons">link</i> source</a></div>{% endif %}
<div class="chip"><a href="https://github.com/kstep/kstep.github.com/tree/master/_src/{{ path | replace:".html",".md" }}"><i class="material-icons">code</i> code</a></div>
{{ content }}
{% if comments %}{% include "_layouts/disqus.liquid" %}{% endif %}

<script src="/static/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>
{% include "_layouts/footer.liquid" %}
