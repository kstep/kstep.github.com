{% include "header.liquid" %}
<nav class="light-green lighten-2" role="navigation">
    <div class="nav-wrapper container">
        <div class="col s12">
            <span class="brand-logo" href="">//kstep</span>
        </div>
    </div>
</nav>
<main class="container">
<h2>All posts</h2>
<div class="row">
    {% for post in collections.posts.pages %}
    <div class="col s6"><a href="{{ post.permalink }}"><div class="card-panel">{{ post.title }} <label>{{ post.published_date }}</label></div></a></div>
    {% endfor %}
</div>
</main>
